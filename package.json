{
    "name": "movie-ts-graphql",
    "version": "0.0.1",
    "description": "",
    "author": "",
    "private": true,
    "license": "GPL-3.0",
    "scripts": {
        "test": "jest",
        "test:cov": "jest --coverage",
        "test:e2e": "jest --config  ./jest.e2e.json",
        "build": "tsc -p tsconfig.build.json",
        "lint": "eslint .",
        "format": "prettier . --write",
        "fmt": "npm run format",
        "lint-fmt": "npm run lint && npm run fmt",
        "build:watch": "tsc --watch",
        "start": "node -r source-map-support/register dist/main.js ",
        "start:dev": "nodemon --watch \"src/**\" --ext \"ts,json\"  --ignore \"src/**/*.test.ts\" --exec 'tsc src/main.ts && node -r source-map-support/register dist/main' "
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.345.0",
        "@prisma/client": "4.14.0",
        "@types/argon2": "^0.15.0",
        "class-transformer": "^0.5.1",
        "class-validator": "^0.14.0",
        "cuid": "^3.0.0",
        "fastify": "^4.19.2",
        "graphql": "^16.7.1",
        "jsonwebtoken": "^9.0.1",
        "mercurius": "^13.1.0",
        "mercurius-integration-testing": "^8.1.1",
        "reflect-metadata": "^0.1.13",
        "sharp": "^0.32.1",
        "type-graphql": "^1.1.1",
        "typedi": "^0.10.0"
    },
    "devDependencies": {
        "@types/jest": "29.5.0",
        "@types/node": "18.15.11",
        "@typescript-eslint/eslint-plugin": "^5.0.0",
        "@typescript-eslint/parser": "^5.0.0",
        "concurrently": "^7.2.2",
        "cspell": "^6.12.0",
        "eslint": "^8.0.1",
        "eslint-config-prettier": "^8.3.0",
        "jest": "29.5.0",
        "nodemon": "^2.0.19",
        "prettier": "^2.3.2",
        "prisma": "^4.14.0",
        "source-map-support": "^0.5.20",
        "ts-jest": "29.0.5",
        "ts-node": "^10.0.0",
        "typescript": "^4.7.4",
        "@types/express": "^4.17.13",
        "@types/supertest": "^2.0.11",
        "eslint-plugin-prettier": "^4.0.0",
        "supertest": "^6.1.3",
        "ts-loader": "^9.2.3",
        "tsconfig-paths": "4.2.0"
    },
    "jest": {
        "moduleFileExtensions": [
            "js",
            "json",
            "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
            "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
            "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node"
    }
}
